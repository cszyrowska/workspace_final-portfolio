.intro-overlay {
  position: fixed;
  inset: 0;
  background: radial-gradient(1200px 600px at 50% 20%, #1b2230 0%, #0f1115 60%, #0a0c10 100%);
  overflow: hidden;
  z-index: 9999;

  /* Final push off-screen after wind completes */
  animation: intro-push 600ms ease-in-out forwards;
  animation-delay: 3200ms; /* starts after wind ends */
}

/* Lanterns container pieces */
.lantern {
  position: absolute;
  top: -140px; /* start off-screen */
  transform: translateY(-120%);
  animation: lantern-drop 1000ms cubic-bezier(.2,.7,.15,1) forwards;
  /* each lantern sets its own left and delay inline */
}

.lantern .string {
  position: absolute;
  top: -180px;
  left: 29px;
  width: 2px;
  height: 200px;
  background: linear-gradient(#2b2f3a, #16181d);
  box-shadow: 0 0 6px rgba(255, 255, 255, 0.05) inset;
}

.lantern-svg {
  width: 60px;
  height: 90px;
  filter: drop-shadow(0 6px 18px rgba(255, 182, 98, 0.25));
}

/* Wind sweep — a wide translucent band moving left -> right */
.wind {
  position: absolute;
  top: 0;
  left: -60vw;
  width: 160vw;
  height: 100%;
  background:
    linear-gradient(90deg,
      rgba(255,255,255,0) 0%,
      rgba(211,231,255,0.06) 20%,
      rgba(211,231,255,0.12) 35%,
      rgba(211,231,255,0.16) 48%,
      rgba(211,231,255,0.12) 62%,
      rgba(211,231,255,0.06) 80%,
      rgba(255,255,255,0) 100%);
  backdrop-filter: blur(1px);
  pointer-events: none;

  animation: wind-sweep 1200ms ease-in-out forwards;
  animation-delay: 2000ms; /* after lanterns land */
}

/* Soft title while intro plays */
.intro-title {
  position: absolute;
  bottom: 10vh;
  width: 100%;
  text-align: center;
  margin: 0;
  font-weight: 600;
  letter-spacing: 0.06em;
  color: #e9e7e3;
  opacity: 0.0;
  animation: title-fade 800ms ease forwards;
  animation-delay: 1400ms;
  text-shadow: 0 4px 30px rgba(255, 196, 118, 0.15);
}

/* Keyframes */
@keyframes lantern-drop {
  0% {
    transform: translateY(-120%);
    opacity: 0.0;
  }
  70% {
    transform: translateY(0);
    opacity: 1;
  }
  85% {
    transform: translateY(-8px); /* tiny bounce */
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes wind-sweep {
  0%   { transform: translateX(0); opacity: 0.0; }
  10%  { opacity: 1; }
  100% { transform: translateX(100vw); opacity: 0.9; }
}

@keyframes intro-push {
  from { transform: translateX(0); }
  to   { transform: translateX(100%); }
}

@keyframes title-fade {
  from { opacity: 0; transform: translateY(8px); }
  to   { opacity: 1; transform: translateY(0); }
}

/* Accessibility: prefer reduced motion = skip intro quickly */
@media (prefers-reduced-motion: reduce) {
  .lantern,
  .wind,
  .intro-title,
  .intro-overlay {
    animation: none !important;
  }
}

